{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es6"
    ],
    "sourceMap": true,
    "rootDir": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
